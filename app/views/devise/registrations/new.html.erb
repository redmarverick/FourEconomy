<div class="h-screen flex flex-col items-center justify-start max-w-screen-sm mx-auto pt-4 bg-gray-200">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full mb-4' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="bg-white p-4 shadow-md w-full">
    <%= f.text_field :name, class: 'w-full bg-white border-b border-gray-300 py-2 px-2 focus:outline-none focus:border-gray-500', autofocus: true, placeholder: 'Full Name', autocomplete: 'name' %>
    <%= f.email_field :email, class: 'w-full bg-white border-b border-gray-300 py-2 px-2 focus:outline-none focus:border-gray-500', autofocus: true, placeholder: 'Email', autocomplete: 'email' %>
    <%= f.password_field :password, class: 'w-full bg-white border-none border-gray-300 py-2 px-2 focus:outline-none focus:border-gray-500', placeholder: 'Password', autocomplete: 'current-password' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
