<div class="h-screen flex flex-col items-center justify-start max-w-screen-sm mx-auto pt-4 bg-gray-200">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'w-full mb-4' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.password_field :password, class: 'w-full bg-white border-b border-gray-300 py-2 px-2 focus:outline-none focus:border-gray-500', placeholder: "New Password (#{@minimum_password_length} characters minimum)", autofocus: true, autocomplete: "new-password" %>
      <%= f.password_field :password_confirmation, class: 'w-full bg-white border-none py-2 px-2 focus:outline-none focus:border-gray-500', placeholder: 'Repeat New Password', autocomplete: "new-password" %>
    </div>

<% end %>
</div>
